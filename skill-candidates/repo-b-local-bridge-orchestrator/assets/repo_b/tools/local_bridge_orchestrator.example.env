# Local Bridge Orchestrator (phase 1 strict defaults)
REPO_B_LOCAL_ORCH_ENABLED=1
REPO_B_LOCAL_ORCH_CONFIDENCE_MIN=0.85
REPO_B_LOCAL_ORCH_EVIDENCE_MIN=2
REPO_B_LOCAL_ORCH_FAIL_CLOSED=1
REPO_B_LOCAL_ORCH_MAX_HINTS=12

# Continue bridge must remain read-only in phase 1.
REPO_B_CONTINUE_BRIDGE_ENABLED=1
REPO_B_CONTINUE_MODE=read_only
REPO_B_CONTINUE_ALLOWED_ROOTS=$env:USERPROFILE\\Documents\\GitHub\\<PRIVATE_REPO_B>

# Optional overrides.
REPO_B_LOCAL_ORCH_BRIDGE_URL=http://127.0.0.1:9000
# REPO_B_SAFE_INDEX_SCRIPTS=$CODEX_HOME/skills/safe-mass-index-core/scripts
